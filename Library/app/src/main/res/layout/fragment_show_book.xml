<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.mainActivityFragments.ShowBookFragment"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/bookName_showBook_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookname"
        app:layout_constraintBottom_toTopOf="@+id/reserveBook_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status_showBook_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookstatus"
        app:layout_constraintBottom_toTopOf="@+id/reserveBook_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookName_showBook_textView" />

    <TextView
        android:id="@+id/deadLine_showBook_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookdeadline"
        app:layout_constraintBottom_toTopOf="@+id/reserveBook_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_showBook_textView" />

    <Button
        android:id="@+id/reserveBook_Button"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/reserve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar_showBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>